<!DOCTYPE html>
<html>
  <head>
    <title>PuppyLove</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', "data-turbolinks-track" => true %>
    <%= javascript_include_tag 'application', "data-turbolinks-track" => true %>
    <link href="https://fonts.googleapis.com/css?family=Corben:700" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Nobile" rel="stylesheet" type="text/css">
  </head>

  <body>

    <div class="nav_bar">
      <%= link_to "Home", '/', class: "nav_button" %></li>
      <% if current_user %>
        <div style="float:right"><%= link_to "Sign out", signout_path, id: "sign_out", class: "nav_button" %></div>
      <% else %>
        <div style="float:right"><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "nav_button" %></div>
      <% end %>
    </div>

    <div>
    <%= yield %>
    </div>
  </body>
</html>
