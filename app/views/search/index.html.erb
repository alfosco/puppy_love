<%= render partial: 'layouts/navbuttons' %>

<h1 class="dog_count"><%= @dogs.count %> dogs were found</h1>

<% @dogs.each do |dog| %>
  <div class="dog">
    <h3><%= link_to dog.name, dog_path(dog.id), class: "dog_name" %></h3>
    <div class="dog_info"
      <p><strong>Sex:</strong> <%= dog.sex %></p>
      <% if dog.breed.class == Array %>
        <% dog.breed.each do |breed| %>
          <% if breed == dog.breed[0]%>
            <strong>Mix Breed:</strong> <%= breed[:$t] %>,
          <% else %>
            <%= breed[:$t] %>
          <% end %>
        <% end %>
      <% else %>
        <strong>Breed:</strong> <%= dog.breed[:$t] %>
      <% end %>
      <p><strong>Age:</strong> <%= dog.age %></p>
      <p><strong>Location:</strong> <%= dog.city %>, <%= dog.state %></p>
    </div>
    <img class="dog_image" src="<%= dog.image %>" alt="">
  </div>
  <br>
<% end %>
